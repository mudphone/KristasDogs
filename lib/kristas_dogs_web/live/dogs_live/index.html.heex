<div>
  <div class="pb-8">
    <span>
      <a
        href={~p"/"}
        class={"text-sky-500 hover:text-sky-700 pr-2 #{if @live_action == :index, do: "underline"}"}
      >Current</a>
      <a
        href={~p"/archive"}
        class={"text-sky-500 hover:text-sky-700 pr-2 #{if @live_action == :archive, do: "underline"}"}
      >Archive</a>
    </span>
  </div>
  <div class="pb-8">
    <span>
      <form phx-change="search">
        <input type="text" name="dog_name" phx-debounce="500" placeholder="Fuzzy search"/>
      </form>
    </span>
  </div>
  <div
    :if={@page}
    class="pb-8"
  >
    <.live_component
      module={Pager} id="top-pager"
      num_pages={@num_pages} page={@page} dog_count={@dog_count}
    />
  </div>
  <div>
    <ul>
      <li :for={dog <- @dogs} id={"#{dog.id}"} class="flex flex-col mb-[20px]">
        <div class={"bg-orange-400 h-0.5 w-[#{pct_new(dog)}%]"}></div>
        <div class="relative">
          <div class="absolute top-0 right-0 clear-right text-right text-orange-400 text-xs"><%= dog.inserted_at |> date_ago %></div>
        </div>
        <div class="flex">
          <span class="flex-initial mr-[8px] w-2/5 h-40">
            <img src={dog.profile_image_url} class="max-h-full w-auto" />
          </span>
          <span class="flex-initial mt-[8px] w-3/5 flex flex-col">
            <span class="font-bold">
              <span><%= dog.name %></span>
              <span><%= "#{if Houses.is_male?(dog), do: "ðŸ•º", else: "ðŸ’ƒ"}" %></span>
            </span>
            <span class="text-sm italic">
              <%= if dog.campus do %>
                <span><%= dog.campus %></span>, 
              <% else %>
                <span>[no campus]</span>, 
              <% end %>
              <%= if dog.age_text do %>
                <span><%= dog.age_text %></span>, 
              <% else %>
                <span>[no age]</span>, 
              <% end %>
              <%= if dog.primary_breed do %>
                <span><%= dog.primary_breed %></span>
              <% else %>
                <span>[no breed]</span>, 
              <% end %>
            </span>
            <span>
              <span class="text-xs">Added: <%= dog.inserted_at |> date_fmt %></span>
            </span>
            <%= if @live_action == :archive do %>
            <span>
              <span>ðŸŽ‰Removed: </span>
              <span><%= dog.removed_from_website_at |> date_ago %></span> 
              <span class="text-xs"><%= dog.removed_from_website_at |> date_fmt %></span>
            </span>
            <% end %>
            
            <span class="text-sky-500 hover:text-sky-700">
              <a href={dog.details_url}>details</a>
            </span>
          </span>
        </div>
      </li>
    </ul>
  </div>
  <div
    :if={@page}
    class="pb-8"
  >
    <.live_component
      module={Pager} id="bottom-pager"
      num_pages={@num_pages} page={@page} dog_count={@dog_count}
    />
  </div>
</div>
